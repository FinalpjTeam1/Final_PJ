<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heal.dao.LikeDao">

 
	<resultMap type="com.heal.dto.Like" id="likeList">
	  <result property="like_no" column="like_no"/>
	  <result property="board_no" column="board_no"/>
	  <result property="member_id" column="member_id"/>
	  <result property="like_check" column="like_check"/>
	</resultMap>


 <update id="likeCheck" parameterType="HashMap">
    UPDATE review_like
    SET like_check = like_check + 1 
    WHERE member_id=#{member_id} AND board_no=#{board_no}
  </update>
  
  <update id="likeCheckCancel" parameterType="HashMap">
    UPDATE review_like
    SET like_check = 0
	WHERE member_id=#{member_id} AND board_no=#{board_no}
  </update>


</mapper>

	